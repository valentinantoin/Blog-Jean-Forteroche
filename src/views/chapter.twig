{% extends "layout.twig" %}


{% block title %}
    <title>{{ chapter.title }}</title>
{% endblock %}

{% block content %}

    {% for chapter in chapter %}

    <h1>{{ chapter.title }}</h1>

    <div class="chapterContent">

        <p>{{ chapter.content }}</p>

    </div>


    {% endfor %}

{% endblock %}


{% block comments %}

    {% for comment in comments %}

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Post√© par : {{ comment.user_pseudo }}</h5>
                <h6 class="card-text">Le {{ comment.creation_date_fr }}</h6>
                <p class="card-text">{{ comment.content }}</p>
            </div>
        </div>

    {% endfor %}



{% endblock %}

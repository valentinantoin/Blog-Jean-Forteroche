{% extends "layout.twig" %}

{% block title %} Bienvenue sur le blog de Jean ! {% endblock %}


{% block content %}

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="img/alaska1.jpg" class="d-block w-100" alt="aurore boreale">
            </div>
            <div class="carousel-item">
                <img src="img/alaska2.jpg" class="d-block w-100" alt="paysage de montagne">
            </div>
            <div class="carousel-item">
                <img src="img/alaska3.jpg" class="d-block w-100" alt="route de montagne">
            </div>
        </div>
    </div>

    <h1>Voici le dernier chapitre publi√© : </h1>


    <div class="card border-dark">
        <h5 class="card-header">{{ chapter.title | nl2br}}</h5>
        <div class="card-body">
            <h6 class="card-text">{{ chapter.creation_date_fr }}</h6>
            <p class="card-text">{{ chapter.content | nl2br | slice(0, 250) }}</p>
            <a href="https://jeanforteroche.valentin-antoin.fr/index.php?acces=chapter&id={{ chapter.id }}" class="card-link">Lire plus...</a>
        </div>
    </div>


{% endblock %}